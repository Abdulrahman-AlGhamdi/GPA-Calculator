<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ss.gpacalculator.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_totalCalculateFragment"
            app:destination="@id/totalCalculateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_semesterCalculateFragment"
            app:destination="@id/semesterCalculateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/semesterCalculateFragment"
        android:name="com.ss.gpacalculator.ui.semester.SemesterCalculateFragment"
        android:label="@string/calculate_semester"
        tools:layout="@layout/fragment_semester_calculate" />

    <fragment
        android:id="@+id/totalCalculateFragment"
        android:name="com.ss.gpacalculator.ui.overall.OverallCalculateFragment"
        android:label="@string/calculate_overall"
        tools:layout="@layout/fragment_overall_calculate" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ss.gpacalculator.ui.settings.SettingsFragment"
        android:label="@string/settings" />

</navigation>