<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ss.gpacalculator.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ss.gpacalculator.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_totalCalculateFragment"
            app:destination="@id/totalCalculateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_semesterCalculateFragment"
            app:destination="@id/semesterCalculateFragment" />
    </fragment>

    <fragment
        android:id="@+id/semesterCalculateFragment"
        android:name="com.ss.gpacalculator.ui.semester.SemesterCalculateFragment"
        android:label="SemesterCalculateFragment"
        tools:layout="@layout/fragment_semester_calculate" />

    <fragment
        android:id="@+id/totalCalculateFragment"
        android:name="com.ss.gpacalculator.ui.total.TotalCalculateFragment"
        android:label="TotalCalculateFragment"
        tools:layout="@layout/fragment_total_calculate" />

</navigation>