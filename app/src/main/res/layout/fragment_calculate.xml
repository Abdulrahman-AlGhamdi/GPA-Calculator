        android:visibility="invisible">

        <EditText
            android:id="@+id/Credit2"
            style="@style/ArabicEditTextStyle"/>
        <Spinner
            android:id="@+id/Grade2"
            style="@style/ArabicSpinnerStyle"/>
    </LinearLayout>

